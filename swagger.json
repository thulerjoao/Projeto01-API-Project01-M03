{
    "openapi": "3.0.0",
    "info": {
      "title": "API Jordan Store",
      "description": "API para CRUD da loja Jordan Store e carrinho de compras",
      "termsOfService": "",
      "contact": {
        "email": "thuler_lima@hotmail.com"
      },
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000/jordans",
        "description": "API de teste"
      },
      {
        "url": "https://api-jordanstore-blue.onrender.com/jordans",
        "description": "API de produção"
      }],
      "paths":{
        "/all-jordan":{
          "get":{
            "summary": "Lista de todos os jordans",
            "description": "Rota responsável por listar todos os jordans",
            "tags": ["Jordans"],
            "responses": {
              "404": {
                "description": "Not Found"
              },
              "200":{
                "description": "Ok",
                "content":{
                  "application/json":{
                    "schema":{
                        "type":"array",
                        "items":{
                          "$ref": "#/components/schemas/Jordans"
                        }
                    }
                  }
                }
              }
            }
          }
        },"/one-jordan/{id}": {
          "get": {
            "summary": "Busca uma paleta pelo ID",
            "description": "Rota responsável por buscar um jorjan pelo seu ID",
            "tags": ["Jordans"],
            "parameters": [
              {
                "name": "id",
                "in": "path",
                "description": "Id do jordan para a busca",
                "required": true
              }
            ],
            "responses": {
              "400": {
                "description": "Bad Request"
              },
              "200": {
                "description": "OK",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "$ref": "#/components/schemas/Jordans"
                    }
                  }
                }
              }
            }
          }
        },
      },
      "components":{
        "schemas":{
          "Jordans":{
            "type":"object",
            "properties":{
              "modelo":{
                "type":"string"
              },
              "descricao":{
                "type":"string"
              },
              "foto":{
                "type":"string"
              },
              "preco":{
                "type":"number"
              }
            }
          },
          "carrinho":{
            "type":"object",
            "properties":{
              "jordanId":{
                "type":"string"
              },
              "quantidade":{
                "type":"number"
              }
          }
          
        }
      }
}
